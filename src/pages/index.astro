---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="space-y-6">
    <!-- Dashboard Header -->
    <div class="bg-white rounded-lg shadow p-6">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome to Your Dashboard</h1>
      <p class="text-gray-600">Manage your tasks, emails, and schedule all in one place.</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-2 bg-blue-100 rounded-lg">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2-2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-gray-900">Unread Emails</h3>
            <p class="text-2xl font-bold text-blue-600">24</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-2 bg-green-100 rounded-lg">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2-2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-gray-900">Today's Events</h3>
            <p class="text-2xl font-bold text-green-600">3</p>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-2 bg-purple-100 rounded-lg">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <div class="ml-4">
            <h3 class="text-lg font-semibold text-gray-900">Pending Tasks</h3>
            <p class="text-2xl font-bold text-purple-600">7</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">Recent Emails</h2>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                <span class="text-white text-sm font-medium">J</span>
              </div>
              <div class="flex-1">
                <p class="font-medium text-gray-900">John Doe</p>
                <p class="text-sm text-gray-600 truncate">Project update and next steps...</p>
              </div>
              <span class="text-xs text-gray-400">2h ago</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-green-600 rounded-full flex items-center justify-center">
                <span class="text-white text-sm font-medium">S</span>
              </div>
              <div class="flex-1">
                <p class="font-medium text-gray-900">Sarah Wilson</p>
                <p class="text-sm text-gray-600 truncate">Meeting confirmation for tomorrow...</p>
              </div>
              <span class="text-xs text-gray-400">4h ago</span>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">Upcoming Events</h2>
        </div>
        <div class="p-6">
          <div class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="flex-1">
                <p class="font-medium text-gray-900">Team Standup</p>
                <p class="text-sm text-gray-600">9:00 AM - 9:30 AM</p>
              </div>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
              <div class="flex-1">
                <p class="font-medium text-gray-900">Client Review</p>
                <p class="text-sm text-gray-600">2:00 PM - 3:00 PM</p>
              </div>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              <div class="flex-1">
                <p class="font-medium text-gray-900">Project Planning</p>
                <p class="text-sm text-gray-600">4:00 PM - 5:00 PM</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>



<style>
  /* Custom styles for smooth transitions */
  .dashboard-section,
  .mail-section,
  .calendar-section {
    transition: opacity 0.3s ease-in-out;
  }
  
  /* Ensure proper mobile responsive behavior */
  @media (max-width: 1024px) {
    #sidebar {
      transform: translateX(-100%);
    }
    
    #sidebar:not(.-translate-x-full) {
      transform: translateX(0);
    }
  }
  

</style>
